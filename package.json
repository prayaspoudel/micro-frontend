{
  "name": "@micro-frontend/root",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared/*",
    "host",
    "apps/*"
  ],
  "scripts": {
    "dev": "./setup.sh --start",
    "setup": "./setup.sh",
    "start": "npm run build && concurrently \"npm run start:host\" \"npm run start:crm\" \"npm run start:inventory\" \"npm run start:hr\" \"npm run start:finance\" \"npm run start:task\" \"npm run start:health\"",
    "serve:only": "concurrently \"npm run start:host\" \"npm run start:crm\" \"npm run start:inventory\" \"npm run start:hr\" \"npm run start:finance\" \"npm run start:task\" \"npm run start:health\"",
    "start:host": "(cd host && npm run preview)",
    "start:crm": "(cd apps/crm-module && npm run preview)",
    "start:inventory": "(cd apps/inventory-module && npm run preview)",
    "start:hr": "(cd apps/hr-module && npm run preview)",
    "start:finance": "(cd apps/finance-module && npm run preview)",
    "start:task": "(cd apps/task-module && npm run preview)",
    "start:health": "(cd apps/health-module && npm run preview)",
    "build": "lerna run build",
    "build:shared": "lerna run build --scope='@shared/*'",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "kill-servers": "pkill -f 'vite.*--port.*(300[0-6])' || echo 'No development servers found'",
    "clean:all": "lerna clean --yes && find . -name 'node_modules' -type d -prune -exec rm -rf {} + && find . -name 'dist' -type d -prune -exec rm -rf {} +"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@types/node": "^20.19.19",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "lerna": "^7.4.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.9"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
