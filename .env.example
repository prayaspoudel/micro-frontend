# SSO Configuration
# Set to 'true' to enable SSO, 'false' to use mock authentication
VITE_USE_SSO=false

# SSO Provider - Options: auth0, okta, keycloak, azure-ad, google, mock
VITE_SSO_PROVIDER=mock

# SSO Client Configuration
VITE_SSO_CLIENT_ID=your_client_id_here
VITE_SSO_DOMAIN=your_domain_here

# OAuth Endpoints
VITE_SSO_REDIRECT_URI=http://localhost:3000/callback
VITE_SSO_LOGOUT_REDIRECT_URI=http://localhost:3000/login

# Optional: API Audience (required for some providers like Auth0)
VITE_SSO_AUDIENCE=your_api_audience_here

# OAuth Scopes
VITE_SSO_SCOPE=openid profile email

# Security Settings
VITE_SSO_USE_PKCE=true

# Token Management (in milliseconds)
# Token refresh interval - refresh tokens 5 minutes before expiry
VITE_SSO_TOKEN_REFRESH_INTERVAL=300000

# Session timeout - 1 hour
VITE_SSO_SESSION_TIMEOUT=3600000

# Example configurations for different providers:

# Auth0
# VITE_SSO_PROVIDER=auth0
# VITE_SSO_CLIENT_ID=your_auth0_client_id
# VITE_SSO_DOMAIN=your-tenant.auth0.com
# VITE_SSO_AUDIENCE=https://your-api.example.com

# Okta
# VITE_SSO_PROVIDER=okta
# VITE_SSO_CLIENT_ID=your_okta_client_id
# VITE_SSO_DOMAIN=your-domain.okta.com

# Keycloak
# VITE_SSO_PROVIDER=keycloak
# VITE_SSO_CLIENT_ID=your_keycloak_client_id
# VITE_SSO_DOMAIN=https://your-keycloak-server.com/realms/your-realm

# Azure AD
# VITE_SSO_PROVIDER=azure-ad
# VITE_SSO_CLIENT_ID=your_azure_client_id
# VITE_SSO_DOMAIN=your-tenant-id

# Google Workspace
# VITE_SSO_PROVIDER=google
# VITE_SSO_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
# VITE_SSO_DOMAIN=accounts.google.com
